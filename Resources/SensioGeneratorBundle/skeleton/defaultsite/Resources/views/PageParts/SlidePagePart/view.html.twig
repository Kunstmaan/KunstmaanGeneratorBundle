<div class="slide-pp">
    {% if resource.title is not empty %}<p>{{ resource.title }}</p>{% endif %}
    {% if resource.description is not empty %}<p>{{ resource.description }}</p>{% endif %}
    {% if resource.image is not empty %}<img src="{{ asset(resource.image.url) }}" />{% endif %}
    {% if resource.tickText is not empty %}<p>{{ resource.tickText }}</p>{% endif %}
    {% if resource.buttonUrl is not empty %}<a href="{{ resource.buttonUrl }}" {% if resource.buttonNewWindow %}target="_blank"{% endif %}>{{ resource.buttonText }}</a>{% endif %}
</div>