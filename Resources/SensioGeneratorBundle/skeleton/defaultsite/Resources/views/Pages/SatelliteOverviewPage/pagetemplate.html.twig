<div class="row-fluid">
    <div class="span12">
        <h2>{{ 'satellite.' ~ page.type|trans }}</h2>
        {% if satellites|length > 0%}
            <table class="table table-striped table-bordered table-sortable responsive">
                <thead>
                <tr>
                    <th>{{ 'satellite.name'|trans|capitalize }}</th>
                    <th>{{ 'satellite.launched'|trans|capitalize }}</th>
                    <th>{{ 'satellite.weight'|trans|capitalize }} (kg)</th>
                </tr>
                </thead>
                <tbody>
                {% for satellite in satellites %}
                <tr>
                    <td><a href="{{ satellite.link }}" target="_blank">{{ satellite.name }}</a></td>
                    <td>{{ satellite.launched|date('F j, Y') }}</td>
                    <td>{{ satellite.weight }}</td>
                <tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
</div>

