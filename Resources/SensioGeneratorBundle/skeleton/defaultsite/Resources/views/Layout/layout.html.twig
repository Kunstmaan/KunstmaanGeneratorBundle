<body>
    {% block header %}
    <!-- Header -->
    <header role="header" class="main-header">
        <section class="container">
            <div class="row">
                <div class="col-md-3">
                    {% set homepagePageNode = nodemenu.getNodeByInternalName('homepage') %}
                    <a href="{{ path('_slug', { 'url': homepagePageNode.slug }) }}" class="site-logo">
                        <img src="{{ asset('bundles/kunstmaanwebsite/img/general/demo-logo.svg') }}" alt="Demosite" />
                    </a>
                </div>
                {% if nodemenu is defined %}
                <div class="col-md-8 js-navigation-space-hook">
                    <nav role="navigation" class="js-navigation navigation navigation--big navigation--animated">
                        <!-- Mobile navigation toggle -->
                        <div class="js-navigation__toggle navigation__toggle navigation__toggle--top">
                            MENU
                            <i class="icon-reorder"></i>
                            <i class="icon-remove"></i>
                        </div>
                        <!-- Navigation level -->
                        <ul class="js-main-navigation-level navigation__level">
                            <li class="navigation__item {% if(homepagePageNode.active) %}navigation__item--active{% endif %}">
                                <a href="{{ path('_slug', { 'url': homepagePageNode.slug }) }}" class="navigation__link">Home</a>
                            </li>
                            {% set activeSubnode = nodemenu.getActiveForDepth(1) %}
                            {% for node in activeSubnode.children %}
                                {% if not node.node.isHiddenFromNav() %}
                                    <li class="navigation__item {% if(node.active) %}navigation__item--active{% endif %}">
                                        <a href="{{ path('_slug', { 'url': node.slug }) }}" class="navigation__link">{{ node.title }}</a>
                                        {% if node.children|length>0 %}
                                            <!-- Mobile submenu toggle -->
                                            <div class="js-navigation__toggle navigation__toggle navigation__toggle--sublevel">
                                                <i class="icon-chevron-down"></i>
                                                <i class="icon-chevron-up"></i>
                                            </div>
                                            <!-- Submenu -->
                                            <ul class="navigation__level navigation__level--sublevel">
                                            {% for node in node.children %}
                                                {% if not node.node.isHiddenFromNav() %}
                                                    <li class="navigation__item navigation__item--sublevel {% if(node.active) %}navigation__item--active{% endif %}">
                                                        <a href="{{ path('_slug', { 'url': node.slug }) }}" class="navigation__link navigation__link--sublevel">
                                                            {{ node.title }}
                                                            {% if(node.active) %}
                                                                <i class="icon-chevron-right"></i>
                                                            {% endif %}
                                                        </a>
                                                    </li>
                                                {% endif %}
                                            {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </nav>
                </div>
                {% endif %}
                {% set searchPageNode = nodemenu.getNodeByInternalName('search') %}
                {% if searchPageNode %}
                <div class="col-md-1">
                    <form method="get" action="{{ path('_slug', { 'url': searchPageNode.slug }) }}">
                        <input type="text" name="query" id="query" value="{% if q_query is defined and q_query != '' %}{{ q_query }}{% endif %}" />
                        <input type="submit" name="search" id="search" value="Q" />
                    </form>
                </div>
                {% endif %}
            </div>
        </section>
        {% block pagetitle %}{% endblock %}
    </header>
    {% endblock %}

    {% block social %}
    <section class="container">
        <div class="row row--padded">
            <div class="col-md-12 text-right">
                <a href="http://twitter.com/share" class="socialite twitter-share" data-url="http://www.kunstmaan.be" data-text="" data-count="true" rel="nofollow" target="_blank" class="social-link">
                    Twitter
                </a>
                <a href="http://www.facebook.com/sharer.php?u=http://www.kunstmaan.be" class="socialite facebook-like" data-href="http://www.kunstmaan.be" data-send="true" data-layout="button_count" data-width="450" data-show-faces="false" rel="nofollow" target="_blank" class="social-link">
                    Facebook
                </a>
            </div>
        </div>
    </section>
    {% endblock %}

    {% block breadcrumbs %}
    {% if nodemenu.breadCrumb|length > 1 %}
    <section class="container">
        <div class="row">
            <nav class="col-md-12">
                <ul class="breadcrumb">
                    <li>You are here: </li>
                    {% for node in nodemenu.breadCrumb %}
                        {% if not loop.first %}
                            {% if loop.last %}
                                <li class="active">{{ node.title }}</a></li>
                            {% else %}
                                <li><a href="{{ path('_slug', { 'url': node.slug }) }}">{{ node.title }}</a> <span class="divider">/</span></li>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </section>
    {% endif %}
    {% endblock breadcrumbs %}

    <!-- Main -->
    <main role="main">
        {% block content %}{% endblock %}
    </main>

    {% block footer %}
    <!-- Footer -->
    <footer role="footer" class="footer">
        <section class="splash splash--gray-dark splash--border-top">
            <div class="container">
                <div class="row row--padded">
                    {% if nodemenu is defined %}
                    {% set activeSubnode = nodemenu.getActiveForDepth(1) %}
                    <nav class="col-md-2">
                        <h4>Footer title</h4>
                        <ul>
                            {% for node in activeSubnode.children %}
                                {% if not node.node.isHiddenFromNav() and node.node.internalName != '4_level_navigation' %}
                                    <li {% if(node.active) %} class="active" {% endif %}>
                                        <a href="{{ path('_slug', { 'url': node.slug }) }}">{{ node.title }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </nav>
                    {% endif %}

                    <nav class="col-md-2">
                        <h4>Footer title</h4>
                        <ul>
                            <li>
                                <a href="#">Footer link</a>
                            </li>
                            <li>
                                <a href="#">Footer link</a>
                            </li>
                            <li>
                                <a href="#">Footer link</a>
                            </li>
                        </ul>
                    </nav>

                    <nav class="col-md-2">
                        <h4>Footer title</h4>
                        <ul>
                            <li>
                                <a href="#">Footer link</a>
                            </li>
                            <li>
                                <a href="#">Footer link</a>
                            </li>
                            <li>
                                <a href="#">Footer link</a>
                            </li>
                        </ul>
                    </nav>

                    {% set fourLevelNav = nodemenu.getNodeByInternalName('4_level_navigation') %}
                    {% if (fourLevelNav != null and fourLevelNav.online) %}
                    <nav class="col-md-2">
                        <ul>
                            <li {% if(fourLevelNav.active) %} class="active" {% endif %}>
                                <a href="{{ path('_slug', { 'url': fourLevelNav.slug }) }}">{{ fourLevelNav.title }}</a>
                                <ul class="doormat__list">
                                    {% for node in fourLevelNav.children if not node.node.isHiddenFromNav() %}
                                        <li {% if(node.active) %} class="active" {% endif %}>
                                            <a href="{{ path('_slug', { 'url': node.slug }) }}">{{ node.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </li>
                        </ul>
                    </nav>
                    {% endif %}
                    <div class="col-md-2 pull-right">
                        Social links
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="container">
                <div class="row row--padded">
                    <div class="col-md-12">
                        <p class="pull-left">
                            &copy; {{ "now"|date("Y") }}
                            {% set sitemap = nodemenu.getNodeByInternalName('sitemap') %}
                            {% if (sitemap != null and sitemap.online) %}- <a href="{{ path('_slug', { 'url': sitemap.slug }) }}">{{ sitemap.title }}</a>{% endif %}
                        </p>
                        <p class="pull-right created-by">
                            Created by <a href="http://www.kunstmaan.be"><img src="{{ asset('bundles/kunstmaanwebsite/img/general/km-logo.svg') }}" alt="Kunstmaan"></a>
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </footer>
    {% endblock %}

