</head>
<body>
    <div class="container">
        <!-- Header -->
        <header role="header">
            <div class="row-fluid">
                <div class="span8">
                    {% set homepagePageNode = nodemenu.getNodeByInternalName('homepage') %}
                    <a href="{{ path('_slug', { 'url': homepagePageNode.slug }) }}">
                        <img src="http://placehold.it/300x100&amp;text=Logo" alt="placeholder">
                    </a>
                </div>
                <div class="span2">
                    <p class="muted">Your generated website using the Kunstmaan Bundles</p>
                </div>
                <div class="span2">
                    <a href="http://twitter.com/share" class="socialite twitter-share" data-url="http://www.kunstmaan.be" rel="nofollow" target="_blank">
                        Twitter
                    </a>
                    <a href="http://www.facebook.com/sharer.php?u=http://www.kunstmaan.be" class="socialite facebook-like" data-href="http://www.kunstmaan.be" data-send="false" data-layout="button_count" data-width="60" data-show-faces="false" rel="nofollow" target="_blank">
                        Facebook
                    </a>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <nav role="navigation" class="js-responsive-nav">
                        <!-- Mobile menu toggle -->
                        <div class="js-navigation__toggle navigation__toggle navigation__toggle--top">
                            MENU
                            <i class="icon-reorder"></i>
                            <i class="icon-remove"></i>
                        </div>
                        <!-- Menu -->
                        <ul class="js-navigation navigation">
                        {% if nodemenu is defined %}
                            {% set activeSubnode = nodemenu.getActiveForDepth(1) %}
                            {% for node in activeSubnode.children %}
                                {% if not node.node.isHiddenFromNav() %}
                                    <li class="navigation__item {% if(node.active) %}navigation__item--active{% endif %}">
                                        <a href="{{ path('_slug', { 'url': node.slug }) }}" class="navigation__link">{{ node.title }}</a>
                                        {% if node.children|length>0 %}
                                            <!-- Mobile submenu toggle -->
                                            <div class="js-navigation__toggle navigation__toggle navigation__toggle--submenu">
                                                <i class="icon-chevron-down"></i>
                                                <i class="icon-chevron-up"></i>
                                            </div>
                                            <!-- Submenu -->
                                            <ul class="navigation navigation__sublevel">
                                                {% for node in node.children %}
                                                    {% if not node.node.isHiddenFromNav() %}
                                                        <li class="navigation__item {% if(node.active) %}navigation__item--active{% endif %}">
                                                            <a href="{{ path('_slug', { 'url': node.slug }) }}" class="navigation__link">
                                                                {{ node.title }}
                                                                {% if(node.active) %}<i class="icon-chevron-right"></i>{% endif %}
                                                            </a>
                                                        </li>
                                                    {% endif %}
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </li>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </nav>
                </div>
            </div>
        </header>

        {% block breadcrumbs %}
            <nav class="breadcrumbs">
                <ul>
                    {% for node in nodemenu.breadCrumb %}
                        {% if not loop.first %}
                            <li><a href="{{ path('_slug', { 'url': node.slug }) }}">{{ node.title }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </nav>
        {% endblock breadcrumbs %}
        
        <!-- Main -->
        <main role="main">
            {% block content %}{% endblock %}
        </main>
    </div>

    <!-- Footer -->
    <footer role="footer" class="footer">
        <div class="container">
            <div class="row-fluid">
                <div class="span12">
                    <p class="pull-left">
                        &copy; {{ "now"|date("Y") }}
                    </p>
                    <p class="pull-right created-by">
                        Created by <a href="http://www.kunstmaan.be"><img src="{{ asset('bundles/~~~BUNDLENAME~~~/img/general/km-logo.svg') }}" alt="Kunstmaan"></a>
                    </p>
                </div>
            </div>
        </div>
    </footer>


