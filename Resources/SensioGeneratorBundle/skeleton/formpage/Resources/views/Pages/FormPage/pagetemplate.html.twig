<div class="container">
    <div class="row row--padded-large">
        <div class="col-md-12">
            {% if thanks is defined and thanks %}
                {{ page.thanks|raw }}
            {% else %}
                {% form_theme frontendform 'WameDemositeBundle:Form:fields.html.twig' %}
                <form action='{{ path('_slug', { 'url': nodemenu.current.slug }) }}' method="post" {{ form_enctype(frontendform) }} novalidate="true" class="form-horizontal" role="form">
                    {{ render_pageparts(page, 'main') }}
                    {{ form_rest(frontendform) }}
                </form>
            {% endif %}
        </div>
    </div>
</div>
