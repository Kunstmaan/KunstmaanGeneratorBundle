{{ "
    {% javascripts
        '@" ~ bundle.getName() ~ "/Resources/public/vendor/jquery/jquery.js'
        '@" ~ bundle.getName() ~ "/Resources/public/vendor/sass-bootstrap/js/bootstrap-modal.js'
        '@" ~ bundle.getName() ~ "/Resources/public/vendor/sass-bootstrap/js/bootstrap-collapse.js'
        '@" ~ bundle.getName() ~ "/Resources/public/vendor/flexslider/jquery.flexslider.js'
        '@" ~ bundle.getName() ~ "/Resources/public/js/script.js'
        filter='yui_js'
        output='frontend/footer.js'
    %}
        <script src='{{ asset_url }}'></script>
    {% endjavascripts %}

    <script>
        Modernizr.load([
            {
                test: Modernizr.inlinesvg,
                    {% javascripts
                        '@" ~ bundle.getName() ~ "/Resources/public/vendor/svgeezy/svgeezy.js'
                        filter='yui_js'
                        output='frontend/svgeezy.js'
                    %}
                nope: '{{ asset_url }}',
                    {% endjavascripts %}
                callback : function (url, result, key) {
                    svgeezy.init('png');
                }
            },
            {
                test: Modernizr.input.placeholder,
                    {% javascripts
                        '@" ~ bundle.getName() ~ "/Resources/public/vendor/jquery-placeholder/jquery.placeholder.min.js'
                        filter='yui_js'
                        output='frontend/placeholder.js'
                    %}
                nope: '{{ asset_url }}',
                    {% endjavascripts %}
                callback : function (url, result, key) {
                    $('input, textarea').placeholder();
                }
            }
        ]);
    </script>
" }}
