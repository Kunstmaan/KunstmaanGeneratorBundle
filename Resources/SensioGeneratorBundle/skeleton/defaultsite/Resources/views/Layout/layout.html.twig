<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ websitetitle | trans }}{% block title %} - {{ get_title_for(page) }}{% endblock %}</title>
    <meta name="description" content="">
    {% if page is defined %}
        {{ render_seo_metadata_for(page) }}
    {% endif %}
    <link rel="shortcut icon" href="{{ asset('/img/favicon.ico') }}" type="image/x-icon">
    ~~~CSS~~~
    ~~~TOP_JS~~~
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header role="header">
            <div class="row-fluid">
                <div class="span10">
                    {% set homepagePageNode = nodemenu.getNodeByInternalName('homepage') %}
                    <a href="{{ path('_slug', { 'url': homepagePageNode.slug }) }}">
                        <img src="http://placehold.it/300x100&amp;text=Logo" alt="flicker placeholder">
                    </a>
                </div>
                <div class="span2">
                    <p class="muted">Your generated website using the Kunstmaan Bundles</p>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <nav role="navigation" class="navbar">
                        <div class="navbar-inner">
                            <div class="container">
                                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </a>
                                <div class="nav-collapse collapse">
                                    <ul class="nav">
                                        {% if nodemenu is defined %}
                                            {% set activeSubnode = nodemenu.getActiveForDepth(1) %}
                                            {% for node in activeSubnode.children %}
                                                <li {% if(node.active) %} class="active"{% endif %} {% if node.children|length>0 %}class="has-dropdown"{% endif %}>
                                                    <a href="{{ path('_slug', { 'url': node.slug }) }}">{{ node.title }}</a>
                                                    {% if node.children|length>0 %}
                                                        <ul class="nav nav-pills">
                                                            {% for node in node.children %}
                                                                <li><a href="{{ path('_slug', { 'url': node.slug }) }}">{{ node.title }}</a></li>
                                                            {% endfor %}
                                                        </ul>
                                                    {% endif %}
                                                </li>
                                            {% endfor %}
                                        {% endif %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </header>

        <!-- Main -->
        <main role="main">
            {% block content %}{% endblock %}
        </main>
    </div>

    <!-- Footer -->
    <footer role="footer" class="footer">
        <div class="container">
            <div class="row-fluid">
                <div class="span12">
                    <p>
                        &copy; {{ "now"|date("Y") }}
                    </p>
                </div>
            </div>
        </div>
    </footer>


